<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joelzhu.helper.estate">

    <application
        android:name=".EstateApplication"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.JoelHelper">

        <activity
            android:name=".ui.activities.ListActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.JoelHelper.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.AddActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.JoelHelper.NoActionBar" />

        <activity
            android:name=".ui.activities.DetailActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JoelHelper.NoActionBar" />

        <activity
            android:name=".ui.activities.AssetsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JoelHelper.NoActionBar" />
    </application>
</manifest>