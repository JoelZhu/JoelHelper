<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JoelHelper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF49A8FF</item>
        <item name="colorPrimaryVariant">#FF0064BF</item>
        <item name="colorOnPrimary">#FFFFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFF9900</item>
        <item name="colorSecondaryVariant">#FFAC6700</item>
        <item name="colorOnSecondary">#FFFFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JoelHelper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JoelHelper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JoelHelper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
